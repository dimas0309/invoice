<% layout('layouts/template') %>
<section class="section-cashreports">
    <div class="container mt-3">
        <h2 class="text-center">REPORT</h2>

        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Total</th>
                    <th>Amout Paid</th>
                    <th>Balance Due</th>
                </tr>
            </thead>
            <tbody>
                <% for (let report of reports) { %> 
                <tr>
                    <td> 
                        <%= (report.date).toLocaleDateString()%>
                    </td>
                    <td>$<%= report.total%></td>
                    <td>$<%= report.amount_paid%></td>
                    <td>$<%= report.balance_due%></td>
                </tr>
                <% } %> 
            </tbody>
        </table>
    </div>
     
</section>